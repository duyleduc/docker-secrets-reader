{
    "compilerOptions": {
        "module": "ES2022",
        "target": "es6",
        "rootDir": "src",
        "sourceRoot": "src",
        "sourceMap": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "composite": true,
        "declaration": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "lib": [
        "es2022"
    ],
    "include": ["src"]
}
